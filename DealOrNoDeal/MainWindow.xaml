<Window x:Class="DealOrNoDeal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UI="clr-namespace:DealOrNoDeal.UserInterfaces"
        xmlns:local="clr-namespace:DealOrNoDeal"
        mc:Ignorable="d"
        Title="Deal or no deal - Poor Edition" Height="450" Width="800">
    <Grid>
        <Image Source="/Icons/wallpaper.png" Stretch="UniformToFill"></Image>
        <UI:MainMenu Visibility="Visible" x:Name="mainMenuWindow"/>
        <UI:OptionsMenu Visibility="Collapsed" x:Name="optionsMenuWindow"/>
        <UI:CasesWindow Visibility="Collapsed" x:Name="casesWindow" />
    </Grid>
</Window>
