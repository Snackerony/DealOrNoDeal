             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DealOrNoDeal.UserInterfaces"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Gray">
    <DockPanel LastChildFill="True" Margin="10">
        <Label x:Name="headerText" Foreground="White" FontSize="25" FontWeight="Bold" Content="Wähle einen Koffer" HorizontalContentAlignment="Center" DockPanel.Dock="Top"></Label>
        <ScrollViewer Margin="0,5,0,0" DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="caseGrid">

            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>
