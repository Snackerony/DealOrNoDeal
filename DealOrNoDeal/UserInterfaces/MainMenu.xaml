<UserControl x:Class="DealOrNoDeal.UserInterfaces.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DealOrNoDeal.UserInterfaces"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Gray">
    <Border  Height="200" Width="200" BorderBrush="Black" BorderThickness="1" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Content="Spielen" Margin="5" x:Name="playButton" Click="playButton_Click" ></Button>
            <Button Content="Optionen" Margin="5" Grid.Row="1" x:Name="optionButton" Click="optionButton_Click" ></Button>
            <Button Content="Beenden" Margin="5" Grid.Row="2" x:Name="closeButton" Click="closeButton_Click"></Button>
        </Grid>
    </Border>
    
</UserControl>
